@model Stark.Models.Review

@{
    ViewData["Title"] = "Create";
}

<h2>Create Review</h2>
<p class="text-danger">@ViewData["ErrorMessage"]</p>
@{
    var s = @ViewBag.LicenceId;
    if (ViewData["ErrorMessage"] is null)
    {
        <div style="border-style:groove;">
            <div style="position:relative; left:30%;">

                <hr />

                <div class="row">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="LicenceId" class="control-label">Licence Plate</label>
                            <p id="showLicence">asdasd</p>
                            <select asp-for="LicenceId" class="form-control" id="selectList" asp-items="ViewBag.LicenceId"></select>
                        </div>

                        <div class="form-group">
                            <label asp-for="BadgeId" class="control-label">Select the category of your review</label>
                            <select asp-for="BadgeId" class="form-control" asp-items="ViewBag.BadgeId" style="width:500px;"></select>

                        </div>

                        <div class="form-group" hidden>
                            <label asp-for="UserIp" class="control-label"></label>
                            <select asp-for="UserIp" class="form-control" asp-items="ViewBag.BadgeIP"></select>
                            <input asp-for="UserIp" class="form-control" asp-items="ViewBag.UserIP" />
                            <span asp-validation-for="UserIp" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-success" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
}
<script type="text/javascript">
    var e = document.getElementById("selectList");
    var strUser = e.options[e.selectedIndex].text;
    document.getElementById("showLicence").innerHTML = strUser;
</script>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
